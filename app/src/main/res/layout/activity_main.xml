<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/Beige"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:text="Gra w kości"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginBottom="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Brown"
    />

    <Button
        android:id="@+id/rollButton"
        android:text="RZUĆ KOŚCIAMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10sp"
        app:cornerRadius="0px"
        app:backgroundTint="@color/Chocolate"
    />

    <GridLayout
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    >
        <TextView
            android:id="@+id/roll1"
            android:layout_width="60sp"
            android:layout_marginRight="9sp"
            android:layout_height="60dp"
            android:text=" ? "
            android:textSize="50sp"
            android:textAlignment="center"
            android:background="@color/white"
        />
        <TextView
            android:id="@+id/roll2"
            android:layout_width="60sp"
            android:layout_marginRight="9sp"
            android:layout_height="60dp"
            android:text=" ? "
            android:textSize="50sp"
            android:textAlignment="center"
            android:background="@color/white"

        />
        <TextView
            android:id="@+id/roll3"
            android:layout_width="60sp"
            android:layout_marginRight="9sp"
            android:layout_height="60dp"
            android:text=" ? "
            android:textSize="50sp"
            android:textAlignment="center"
            android:background="@color/white"
        />
        <TextView
            android:id="@+id/roll4"
            android:layout_width="60sp"
            android:layout_marginRight="9sp"
            android:layout_height="60dp"
            android:text=" ? "
            android:textSize="50sp"
            android:textAlignment="center"
            android:background="@color/white"
        />
        <TextView
            android:id="@+id/roll5"
            android:layout_width="60sp"
            android:layout_marginRight="9sp"
            android:layout_height="60dp"
            android:text=" ? "
            android:textSize="50sp"
            android:textAlignment="center"
            android:background="@color/white"
    />
    </GridLayout>

    <TextView
        android:id="@+id/rollScore"
        android:text="Wynik tego losowania: 0"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <TextView
        android:id="@+id/gameScore"
        android:text="Wynik gry: 0"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <TextView
        android:id="@+id/rollCount"
        android:text="Liczba rzutów: 0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <Button
        android:id="@+id/resetButton"
        android:text="RESETUJ WYNIK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="0px"
        android:layout_marginVertical="10sp"
        app:backgroundTint="@color/Chocolate"
    />


</LinearLayout>